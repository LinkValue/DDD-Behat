        <!-- Person Graph Repository -->
        <service id="sir.person.graph_repository"
            class="Sir\Partner\Component\Repository\Graph\PersonGraphRepository"
            parent="majora.graph_repository.abstract"
            public="false" lazy="true"
        />

        <!-- Person Persistence Listener -->
        <service id="sir.person.persistence_listener" public="true"
            class="Sir\Partner\Bundle\DalBundle\Persistence\PersonPersistenceListener"
        >
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="sir.person.repository" />
        </service>

    </services>

