        />

        <!-- Person Dal creation action -->
        <service id="sir.person.dal_creation_action" public="false"
            parent="sir.person.abstract_dal_action"
            class="Sir\Partner\Component\Action\Dal\Person\CreateAction"
        >
            <tag name="majora.domain.action" namespace="sir.person.dal" alias="create" />
        </service>

        <!-- Person Dal edition action -->
        <service id="sir.person.dal_edition_action"  public="false"
            parent="sir.person.abstract_dal_action"
            class="Sir\Partner\Component\Action\Dal\Person\UpdateAction"
        >
            <tag name="majora.domain.action" namespace="sir.person.dal" alias="update" />
        </service>

        <!-- Person Dal deletion action -->
        <service id="sir.person.dal_deletion_action" public="false"
            parent="sir.person.abstract_dal_action"
            class="Sir\Partner\Component\Action\Dal\Person\DeleteAction"
        >
            <tag name="majora.domain.action" namespace="sir.person.dal" alias="delete" />
        </service>

        <!-- Person Dal action factory -->
        <service id="sir.person.dal_action_factory" public="false"
            class="Majora\Framework\Domain\Action\ActionFactory"
        >
            <tag name="majora.domain.action_factory" namespace="sir.person.dal" />
            <tag name="majora.alias" alias="sir.person.action_factory" />
        </service>

        <!-- Person Orm Loader -->
        <service id="partner.person.orm_loader"
            class="Sir\Partner\Component\Loader\Doctrine\PersonDoctrineLoader"
            parent="majora.loader.abstract"
            public="true" lazy="true"
        >
            <argument type="service" id="partner.person.orm_repository" />
            <tag name="majora.loader"
                repository="partner.person.orm_repository"
                entityClass="Sir\Partner\Component\Entity\Person"
                entityCollection="Sir\Partner\Component\Entity\PersonCollection"
            />
            <tag name="majora.alias" alias="sir.person.loader" />
