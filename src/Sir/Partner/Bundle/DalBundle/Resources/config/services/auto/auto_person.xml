            <argument>SirPartner:Person</argument>
            <argument>default</argument>
            <tag name="majora.alias" alias="sir.person.repository" />
        </service>

        <!-- Person Graph Loader -->
        <service id="sir.person.graph_loader"
            class="Sir\Partner\Component\Loader\Graph\PersonGraphLoader"
            parent="majora.loader.abstract"
