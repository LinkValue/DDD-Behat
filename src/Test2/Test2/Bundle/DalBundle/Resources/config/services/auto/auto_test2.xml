<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Test2 abstract dal action -->
        <service id="test2.test2.abstract_dal_action" parent="majora.domain.abstract_action" abstract="true"
            class="Test2\Test2\Component\Action\Dal\Test2\AbstractDalAction"
        />

        <!-- Test2 Dal creation action -->
        <service id="test2.test2.dal_creation_action" public="false"
            parent="test2.test2.abstract_dal_action"
            class="Test2\Test2\Component\Action\Dal\Test2\CreateAction"
        >
            <tag name="majora.domain.action" namespace="test2.test2.dal" alias="create" />
        </service>

        <!-- Test2 Dal edition action -->
        <service id="test2.test2.dal_edition_action"  public="false"
            parent="test2.test2.abstract_dal_action"
            class="Test2\Test2\Component\Action\Dal\Test2\UpdateAction"
        >
            <tag name="majora.domain.action" namespace="test2.test2.dal" alias="update" />
        </service>

        <!-- Test2 Dal deletion action -->
        <service id="test2.test2.dal_deletion_action" public="false"
            parent="test2.test2.abstract_dal_action"
            class="Test2\Test2\Component\Action\Dal\Test2\DeleteAction"
        >
            <tag name="majora.domain.action" namespace="test2.test2.dal" alias="delete" />
        </service>

        <!-- Test2 Dal action factory -->
        <service id="test2.test2.dal_action_factory" public="false"
            class="Majora\Framework\Domain\Action\ActionFactory"
        >
            <tag name="majora.domain.action_factory" namespace="test2.test2.dal" />
            <tag name="majora.alias" alias="test2.test2.action_factory" />
        </service>

        <!-- Test2 Orm Loader -->
        <service id="test2.test2.orm_loader"
            class="Test2\Test2\Component\Loader\Doctrine\Test2DoctrineLoader"
            parent="majora.loader.abstract"
            public="true" lazy="true"
        >
            <argument type="service" id="test2.test2.orm_repository" />
            <tag name="majora.loader"
                repository="test2.test2.orm_repository"
                entityClass="Test2\Test2\Component\Entity\Test2"
                entityCollection="Test2\Test2\Component\Entity\Test2Collection"
            />
            <tag name="majora.alias" alias="test2.test2.loader" />
        </service>

        <!-- Test2 Orm Repository -->
        <service id="test2.test2.orm_repository"
            class="Test2\Test2\Component\Repository\Doctrine\Test2DoctrineRepository"
            parent="majora.doctrine_repository.abstract"
            public="false"
        >
            <factory service="doctrine" method="getRepository" />
            <argument>Test2Test2:Test2</argument>
            <argument>default</argument>
            <tag name="majora.alias" alias="test2.test2.repository" />
        </service>

        <!-- Test2 Graph Loader -->
        <service id="test2.test2.graph_loader"
            class="Test2\Test2\Component\Loader\Graph\Test2GraphLoader"
            parent="majora.loader.abstract"
            public="false" lazy="true"
        >
            <tag name="majora.loader"
                entityClass="Test2\Test2\Component\Entity\Test2"
                entityCollection="Test2\Test2\Component\Entity\Test2Collection"
            />
        </service>

        <!-- Test2 Graph Repository -->
        <service id="test2.test2.graph_repository"
            class="Test2\Test2\Component\Repository\Graph\Test2GraphRepository"
            parent="majora.graph_repository.abstract"
            public="false" lazy="true"
        />

        <!-- Test2 Persistence Listener -->
        <service id="test2.test2.persistence_listener" public="true"
            class="Test2\Test2\Bundle\DalBundle\Persistence\Test2PersistenceListener"
        >
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="test2.test2.repository" />
        </service>

    </services>

</container>
